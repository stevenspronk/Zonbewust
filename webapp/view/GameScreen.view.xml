								<Image height="50%" class="gameTube" id="gameTube" src="images/icons/tube.svg" press="onTube"/>
								<Image height="50%" class="gameParasol" id="gameParasol" src="images/icons/parasol.svg" press="onParasol"/>
							</content>
						</Panel>
