<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="Zonbewust.controller.Leaderboard" displayBlock="true">
	<App>
		<pages>
			<Page title="{i18n>LeaderboardTitle}" id="gamePage" class="gamePage" showHeader="false">
				<content>
					<ScrollContainer xmlns:core="sap.ui.core" xmlns:sap.ui.layout="sap.ui.layout" width="100%" height="100%">
				<List items="{/Z_User}" noDataText="Geen panda's aangemaakt" id="__list0">
				    <items>
				        <StandardListItem  title="{name}" description="{panda_name} ({bamboo} bamboos)" icon="{path:'panda_color',formatter:'.imageFormatter'}" id="__item0"/>
					</items>
				</List>
				</ScrollContainer>
				</content>
				<footer>
					<Toolbar height="15%" design="Transparent">
						<Image height="70%" src="images/icons/back.svg" class="loginButtons" id="btnBack" press="onBack"/>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>