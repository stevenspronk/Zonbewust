<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:sap.ui.layout="sap.ui.layout">
	<CustomTile>
		<content>
			<sap.ui.layout:VerticalLayout>
				<Image  src="{path:'/panda_color',formatter:'.imageFormatter'}" height="100%" width="100%" press="onStart"/>
				<Label text="{/name}" class="loginLabelUser"/>
				<Label text="{/bamboo} Bamboos" class="loginLabelPoints"/>
			</sap.ui.layout:VerticalLayout>
		</content>
	</CustomTile>
</core:FragmentDefinition>